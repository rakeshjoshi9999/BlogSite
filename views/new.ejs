<% include ./partials/header %>

<div class="contentStart">
  <div class="ui main text container segment">
    <div class="ui huge header">New Blog</div>
      <form class="ui form" action="/blogs" method ="POST">
          <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="Title" required>
          </div>
          <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="Image">
          </div>
          <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" rows="8" cols="80" required></textarea>
          </div>
          <div class="field">
            <input class="ui secondary button" type="submit">
          </div>
      </form>
  </div>
</div>

<% include ./partials/footer %>
